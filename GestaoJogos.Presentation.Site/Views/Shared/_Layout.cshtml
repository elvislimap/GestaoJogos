<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Gestão Jogos</title>
    <link rel="stylesheet" href="~/css/layout.min.css" />

    <!--[if lt IE 9]>
        <script src="js/frameworks/html5shiv.js"></script>
    <![endif]-->
</head>
<body class="grey lighten-4">
    <header id="header">
        <div class="navbar-fixed">
            <nav class="blue darken-1">
                <div class="nav-wrapper">
                    <ul class="left">
                        <li><h1 class="logo-wrapper"><a href="~/home" class="brand-logo darken-1">Gestão Jogos</a></h1></li>
                    </ul>
                    <ul class="right hide-on-med-and-down">
                        <li>
                            <a href="#" data-activates="chat-out" class="waves-effect waves-block waves-light chat-collapse tooltipped" data-position="bottom" data-tooltip="Sair">
                                <i class="material-icons prefix">exit_to_app</i>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <ul id="slide-out" class="side-nav">
        <li>
            <div class="user-view">
                <div class="background">
                    <h5 class="logo-wrapper title-menu-left"><a href="~/home" class="brand-logo darken-1">Gestão Jogos</a></h5>
                </div>
            </div>
        </li>
        <li><a href="#"><i class="material-icons">people</i>Amigos</a></li>
        <li><a href="#"><i class="material-icons">videogame_asset</i>Jogos</a></li>
        <li><a href="#"><i class="material-icons">subdirectory_arrow_right</i>Empréstimo</a></li>
        <li><a href="#"><i class="material-icons">subdirectory_arrow_left</i>Devolução</a></li>
    </ul>
    <a id="menu-left" data-activates="slide-out" class="button-collapse"><i class="material-icons">menu</i></a>

    <div class="body-content">
        @RenderBody()
    </div>

    <script src="~/js/layout.min.js"></script>

    @RenderSection("Scripts", false)
</body>
</html>
